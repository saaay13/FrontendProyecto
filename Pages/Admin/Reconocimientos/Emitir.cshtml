@page
@model FrontendProyecto.Pages.Admin.Reconocimientos.EmitirModel
@{
    ViewData["Title"] = "Emitir Reconocimientos";
}

<h2>Emitir certificados y carnets</h2>

@if (TempData["ok"] is string ok)
{
    <div class="alert alert-success">@ok</div>
}
@if (TempData["err"] is string err)
{
    <div class="alert alert-danger">@err</div>
}

<form method="get" class="row g-2 align-items-end mb-4">
    <div class="col-md-6">
        <label class="form-label">Usuario</label>
        <select name="UsuarioId" class="form-select">
            <option value="">-- Seleccione --</option>
            @foreach (var u in Model.UsuariosOptions)
            {
                <option value="@u.Value" selected="@(Model.UsuarioId?.ToString() == u.Value)">@u.Text</option>
            }
        </select>
    </div>
    <div class="col-md-3">
        <button class="btn btn-primary">Cargar</button>
    </div>
</form>

@if (Model.UsuarioId is not null && Model.UsuarioId > 0)
{
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <strong>Carnet</strong>
            <form method="post" asp-page-handler="EmitirCarnet" class="d-flex gap-2">
                <select name="IdOng" class="form-select form-select-sm" style="width:auto">
                    @foreach (var o in Model.OngOptions)
                    {
                        <option value="@o.Value">@o.Text</option>
                    }
                </select>
                @if (Model.PuedeEmitirCarnet)
                {
                    <button class="btn btn-success btn-sm">Emitir Carnet</button>
                }
                else
                {
                    <button class="btn btn-secondary btn-sm" disabled title="@Model.MotivoBloqueoCarnet">Emitir Carnet</button>
                }
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-header"><strong>Inscripciones</strong></div>
        <div class="table-responsive">
            <table class="table table-striped mb-0">
                <thead><tr><th>Actividad</th><th>Fecha</th><th>Lugar</th><th>Estado</th><th>Asist.</th><th>%</th><th></th></tr></thead>
                <tbody>
                    @foreach (var i in Model.InscripcionesVM)
                    {
                        <tr>
                            <td>@i.NombreActividad</td>
                            <td>@i.FechaActividad.ToString("yyyy-MM-dd")</td>
                            <td>@i.Lugar</td>
                            <td>@i.EstadoInscripcion</td>
                            <td>@i.Presentes / @i.TotalAsistencias</td>
                            <td>@i.Porcentaje%</td>
                            <td>
                                @if (i.ElegibleCertificado)
                                {
                                    <form method="post" asp-page-handler="EmitirCertificado">
                                        <input type="hidden" name="IdActividad" value="@i.IdActividad" />
                                        <button class="btn btn-success btn-sm">Emitir Certificado</button>
                                    </form>
                                }
                                else
                                {
                                    <button class="btn btn-secondary btn-sm" disabled>Emitir</button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
