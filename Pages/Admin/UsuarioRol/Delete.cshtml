@page "{idUsuario:int}"
@model FrontendProyecto.Pages.Admin.UsuarioRol.DeleteModel
@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="card shadow-sm">
    <div class="card-body">
        <h5 class="card-title">Eliminar Usuario</h5>

        <p>
            ¿Seguro que deseas eliminar al usuario
           
        </p>

        <p class="text-muted">
            Esta acción también eliminará todas sus asignaciones de rol.
        </p>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @foreach (var err in ViewData.ModelState.SelectMany(kv => kv.Value.Errors))
                {
                    <div>@err.ErrorMessage</div>
                }
            </div>
        }

        <form method="post" class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">Sí, eliminar</button>
            <a asp-page="Index" class="btn btn-outline-secondary">Cancelar</a>
        </form>
    </div>
</div>
