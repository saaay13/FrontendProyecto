@page "{id:int}"
@model FrontendProyecto.Pages.Admin.Ongs.DeleteModel
@{
    ViewData["Title"] = "Eliminar ONG";
}

<div class="card shadow-sm">
    <div class="card-body">
        <h5 class="card-title">Eliminar ONG</h5>
        <p>¿Seguro que deseas eliminar la ONG <strong>@Model.Nombre</strong>?</p>

        <form method="post" class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">Sí, eliminar</button>
            <a asp-page="Index" class="btn btn-outline-secondary">Cancelar</a>
        </form>
    </div>
</div>
