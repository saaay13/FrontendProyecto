@page
@model FrontendProyecto.Pages.Admin.Proyectos.IndexModel
@{
    ViewData["Title"] = "Proyectos";
}

<h2 class="mb-3">Proyectos</h2>

@if (Model.Lista is null || !Model.Lista.Any())
{
    <div class="text-center text-muted py-5">
        <img src="~/img/proyecto/empty.png" alt="Sin proyectos" style="max-width:220px;opacity:.8" />
        <div class="mt-3">No hay proyectos registrados</div>
    </div>
}
else
{
    <div class="row g-3">
        @foreach (var p in Model.Lista)
        {
            var estado = p.EstadoProyecto?.ToString() ?? "";
            var (badgeClass, badgeText) = estado switch
            {
                "Activo" => ("bg-success text-white", "Activo"),
                "Finalizado" => ("bg-secondary text-white", "Finalizado"),
                "Cancelado" => ("bg-danger text-white", "Cancelado"),
                _ => ("bg-light text-dark", estado)
            };

            <div class="col-12 col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm border-0">
                    <!-- Imagen del proyecto -->
                    <div class="ratio ratio-16x9">
                        <img src="@Url.Content($"~/img/proyecto/pt-{p.IdProyecto}.jpg")"
                             onerror="this.onerror=null;this.src='@Url.Content("~/img/proyecto/default-proyecto.jpg")';"
                             alt="@p.NombreProyecto"
                             class="card-img-top object-fit-cover" />
                    </div>

                    <div class="card-body d-flex flex-column">
                        <!-- Estado -->
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0">@p.NombreProyecto</h5>
                            <span class="badge @badgeClass">@badgeText</span>
                        </div>

                        <!-- Descripción -->
                        @if (!string.IsNullOrWhiteSpace(p.Descripcion))
                        {
                            <p class="card-text text-muted small">@p.Descripcion</p>
                        }

                        <ul class="list-unstyled small mb-3">
                            <li><i class="bi bi-calendar-event me-1"></i> Inicio: @p.FechaInicio.ToString("dd/MM/yyyy")</li>
                            <li><i class="bi bi-calendar-check me-1"></i> Fin: @p.FechaFin.ToString("dd/MM/yyyy")</li>
                            <li><i class="bi bi-building me-1"></i> ONG #@p.IdOng</li>
                            <li class="text-muted">ID: @p.IdProyecto</li>
                        </ul>

                        <!-- Botones -->
                        <div class="mt-auto text-end">
                            <a class="btn btn-sm btn-outline-primary"
                               asp-page="/Actividades/Index"
                               asp-route-proyectoId="@p.IdProyecto">
                                Ver actividades
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
