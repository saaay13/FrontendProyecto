@page
@model FrontendProyecto.Pages.Admin.Reconocimientos.EmitirModel
@{
    ViewData["Title"] = "Emitir Reconocimientos";
}

<h2>Emitir certificados</h2>

@if (TempData["ok"] is string ok)
{
    <div class="alert alert-success">@ok</div>
}
@if (TempData["err"] is string err)
{
    <div class="alert alert-danger">@err</div>
}

<form method="get" class="row g-2 align-items-end mb-4">
    <div class="col-md-6">
        <label class="form-label">Usuario</label>
        <select name="UsuarioId" class="form-select">
            <option value="">-- Seleccione --</option>
            @foreach (var u in Model.UsuariosOptions)
            {
                <option value="@u.Value" selected="@(Model.UsuarioId?.ToString() == u.Value)">@u.Text</option>
            }
        </select>
    </div>
    <div class="col-md-3">
        <button class="btn btn-primary">Cargar</button>
    </div>
</form>

@if (Model.UsuarioId is not null && Model.UsuarioId > 0)
{
    <div class="card">
        <div class="card-header"><strong>Inscripciones</strong></div>

        @if (Model.InscripcionesVM.Count == 0)
        {
            <div class="p-3">
                <em>No se encontraron inscripciones para este usuario.</em>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Actividad</th>
                            <th>Fecha</th>
                            <th>Lugar</th>
                            <th>Estado</th>
                            <th>Progreso</th>
                            <th>Completado</th>
                            <th class="text-end"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var i in Model.InscripcionesVM)
                        {
                            <tr>
                                <td>@i.NombreActividad</td>
                                <td>@i.FechaActividad.ToString("yyyy-MM-dd")</td>
                                <td>@i.Lugar</td>
                                <td>@i.EstadoInscripcion</td>
                                <td>
                                    <span class="badge bg-info text-dark">
                                        @i.DiasRegistrados / @i.DiasRequeridos
                                    </span>
                                </td>
                                <td>
                                    @if (i.Completado)
                                    {
                                        <span class="badge bg-success">✔️ Sí</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">❌ No</span>
                                    }
                                </td>
                                <td class="text-end">
                                    @if (i.ElegibleCertificado)
                                    {
                                        <form method="post" asp-page-handler="EmitirCertificado">
                                            <input type="hidden" asp-for="UsuarioId" />
                                            <button type="submit"
                                                    name="IdActividad"
                                                    value="@i.IdActividad"
                                                    class="btn btn-sm btn-success">
                                                Emitir certificado
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <button class="btn btn-secondary btn-sm" disabled
                                                title="Se emite cuando la inscripción está confirmada, la actividad ya inició y el progreso está completado.">
                                            Emitir
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
}
