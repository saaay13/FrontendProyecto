@page
@model FrontendProyecto.Pages.Login.RegisterModel
@{
    ViewData["Title"] = "Crear Cuenta";
    Layout = "_LoginLayout";
}

<div class="login-card">
    <img src="~/img/LogoSinFondo.png" alt="Logo" />
    <h3>Crear Cuenta</h3>

    @if (!string.IsNullOrEmpty(Model.MensajeError))
    {
        <div class="alert alert-danger">@Model.MensajeError</div>
    }

    <form method="post">
        <div class="mb-3">
            <input type="text" class="form-control" id="Nombre" asp-for="Nombre" placeholder="Nombre" required />
        </div>

        <div class="mb-3">
            <input type="text" class="form-control" id="Apellido" asp-for="Apellido" placeholder="Apellido" required />
        </div>

        <div class="mb-3">
            <input type="email" class="form-control" id="CorreoUsuario" asp-for="CorreoUsuario" placeholder="Correo electrónico" required />
        </div>

        <div class="mb-3">
            <input type="password" class="form-control" id="Password" asp-for="Password" placeholder="Contraseña" required minlength="6" />
        </div>

        <div class="mb-3">
            <input type="tel" class="form-control" id="Telefono" asp-for="Telefono" placeholder="Teléfono" />
        </div>

        <button type="submit" class="btn btn-primary w-100">Registrar</button>

        <div class="mt-3 text-center">
            <a asp-page="/Login/Index">¿Ya tienes cuenta? Inicia sesión</a>
        </div>
    </form>
</div>
