@page "{idUsuario:int}/{idRolActual:int}"
@model FrontendProyecto.Pages.Admin.UsuarioRol.EditModel
@{
    ViewData["Title"] = "Editar usuario y rol";
}

<h2 class="mb-3">Editar usuario y rol</h2>
@if (!string.IsNullOrEmpty(Model.TituloUsuario))
{
    <p class="text-muted">Usuario: <strong>@Model.TituloUsuario</strong></p>
}

<form method="post" class="card p-3 shadow-sm">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="IdUsuario" />
    <input type="hidden" asp-for="IdRolActual" />

    <!-- Datos del usuario -->
    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Usuario.Nombre" class="form-label"></label>
            <input asp-for="Usuario.Nombre" class="form-control" />
            <span asp-validation-for="Usuario.Nombre" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Usuario.Apellido" class="form-label"></label>
            <input asp-for="Usuario.Apellido" class="form-control" />
            <span asp-validation-for="Usuario.Apellido" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Usuario.CorreoUsuario" class="form-label"></label>
            <input asp-for="Usuario.CorreoUsuario" class="form-control" />
            <span asp-validation-for="Usuario.CorreoUsuario" class="text-danger"></span>
        </div>
        <div class="col-md-3 mb-3">
            <label asp-for="Usuario.Telefono" class="form-label"></label>
            <input asp-for="Usuario.Telefono" class="form-control" />
            <span asp-validation-for="Usuario.Telefono" class="text-danger"></span>
        </div>
        
    </div>

    <!-- Rol -->
    <div class="mb-3">
        <label class="form-label">Rol</label>
        <select asp-for="RolNuevoId" class="form-select">
            @foreach (var r in Model.Roles)
            {
                <option value="@r.IdRol">@r.NombreRol</option>
            }
        </select>
    </div>

    <div class="d-flex gap-2">
        <button class="btn btn-primary" type="submit">Guardar cambios</button>
        <a asp-page="Index" class="btn btn-outline-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
