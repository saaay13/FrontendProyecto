@page
@model FrontendProyecto.Pages.Admin.UsuarioRol.CreateModel
@{
    ViewData["Title"] = "Crear Usuario (rol asignado automáticamente)";
}

<div class="card shadow-sm">
    <div class="card-body">
        <h5 class="card-title">Crear Usuario</h5>

        <form method="post">
            @await Html.PartialAsync("Partials/_Form", Model.Input, ViewData)
            <br />
            <button type="submit" class="btn btn-primary">Crear</button>
            <a asp-page="Index" class="btn btn-outline-secondary">Cancelar</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
