@page
@model IndexModel
@{
    ViewData["Title"] = "Bienvenido";
    Layout = "_Layout"; 
    }
<section class="min-vh-100 d-flex align-items-center bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-8 col-lg-9">
                <div class="text-center py-5 px-4 px-md-5 rounded-4 shadow-sm bg-white">
                    <img src="~/img/LogoSinFondo.png" alt="Logo" style="height:80px" class="mb-3" />
                    <h1 class="display-5 fw-bold mb-2">¡Bienvenido a FrontendProyecto!</h1>
                    <p class="lead text-muted mb-4">
                        Administra tu aplicación con una experiencia rápida, segura y moderna.
                    </p>

                    

                    <div class="row g-3 text-start mt-2">
                        <div class="col-md-4">
                            <div class="p-3 border rounded-3 h-100">
                                <h5 class="mb-2">Rápido</h5>
                                <p class="text-muted mb-0">Carga ágil y navegación fluida pensada para productividad.</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="p-3 border rounded-3 h-100">
                                <h5 class="mb-2">Seguro</h5>
                                <p class="text-muted mb-0">Autenticación y buenas prácticas para proteger tus datos.</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="p-3 border rounded-3 h-100">
                                <h5 class="mb-2">Escalable</h5>
                                <p class="text-muted mb-0">Arquitectura preparada para crecer con tu proyecto.</p>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4 text-muted small">
                        <span>¿Tienes problemas para entrar?</span>
                        <a asp-page="/Login/Forgot" class="ms-1">Recuperar contraseña</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
