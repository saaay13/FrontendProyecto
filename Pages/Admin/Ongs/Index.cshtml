@page
@model FrontendProyecto.Pages.Admin.Ongs.IndexModel
@{
    ViewData["Title"] = "ONGs";
}

<h2 class="mb-3">Gestión de ONGs</h2>

@if (User.IsInRole("Administrador") || User.IsInRole("Coordinador"))
{
    <a class="btn btn-primary mb-3" asp-page="Create">Nueva ONG</a>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Dirección</th>
            <th>Teléfono</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var o in Model.Lista)
        {
            <tr>
                <td>@o.NombreOng</td>
                <td>@o.Descripcion</td>
                <td>@o.Direccion</td>
                <td>
                    @if (!string.IsNullOrWhiteSpace(o.Telefono))
                    {
                        <span class="badge bg-success">@o.Telefono</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">–</span>
                    }
                </td>
                <td>
                    <a asp-page="/Proyectos/Index"
                       asp-route-ongId="@o.IdOng"
                       class="btn btn-sm btn-secondary">
                        Proyectos
                    </a>

                    @if (User.IsInRole("Administrador") || User.IsInRole("Coordinador"))
                    {
                        <a asp-page="Edit"
                           asp-route-id="@o.IdOng"
                           class="btn btn-sm btn-secondary">
                            Editar
                        </a>
                        <a asp-page="Delete"
                           asp-route-id="@o.IdOng"
                           class="btn btn-sm btn-danger">
                            Eliminar
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
