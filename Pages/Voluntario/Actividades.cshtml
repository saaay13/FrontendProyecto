@page
@model FrontendProyecto.Pages.Voluntario.Actividades.IndexModel
@{
    ViewData["Title"] = "Actividades";
}

<h2 class="mb-3">Actividades</h2>

@if (TempData["ok"] is string ok)
{
    <div class="alert alert-success">@ok</div>
}
@if (TempData["err"] is string err)
{
    <div class="alert alert-danger">@err</div>
}

<div class="table-responsive">
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Proyecto</th>
                <th>Actividad</th>
                <th>Fecha</th>
                <th>Horario</th>
                <th>Lugar</th>
                <th>Cupo</th>
                <th>Estado</th>
                <th class="text-end" style="width:220px;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Lista is null || Model.Lista.Count == 0)
            {
                <tr>
                    <td colspan="8" class="text-center py-4 text-muted">No hay actividades registradas</td>
                </tr>
            }
            else
            {
                @foreach (var a in Model.Lista)
                {
                    <tr>
                        <td>@(a.NombreProyecto ?? "-")</td>
                        <td class="fw-semibold">@a.NombreActividad</td>
                        <td class="text-nowrap">@a.FechaActividad.ToString("dd/MM/yyyy")</td>
                        <td class="text-nowrap">@a.HoraInicio.ToString(@"hh\:mm") - @a.HoraFin.ToString(@"hh\:mm")</td>
                        <td>@a.Lugar</td>
                        <td>@a.CupoMaximo</td>
                        <td>
                            @{
                                var est = a.EstadoActividad ?? "";
                                var (badgeCls, badgeTxt) = est switch
                                {
                                    "EnCurso" => ("badge bg-success", "En curso"),
                                    "Planificada" => ("badge bg-primary", "Planificada"),
                                    "Completada" => ("badge bg-secondary", "Completada"),
                                    "Cancelada" => ("badge bg-danger", "Cancelada"),
                                    _ => ("badge bg-light text-dark", est)
                                };
                            }
                            <span class="@badgeCls">@badgeTxt</span>
                        </td>
                        <td class="text-end">
                            @if (est == "Planificada" || est == "EnCurso")
                            {
                                <form method="post" asp-page-handler="Inscribir" class="d-inline">
                                    <input type="hidden" name="idActividad" value="@a.IdActividad" />
                                    <button type="submit" class="btn btn-sm btn-outline-primary">Inscribir</button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
