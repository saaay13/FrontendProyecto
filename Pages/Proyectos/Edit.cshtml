@page "{id:int}"
@model FrontendProyecto.Pages.Proyectos.EditModel
@{
    ViewData["Title"] = "Editar Proyecto";
}

<h2 class="mb-3">Editar Proyecto</h2>

<form method="post" class="card p-3 shadow-sm">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <partial name="Partials/_Form" model="Model.Input" />

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Guardar cambios</button>
        <a asp-page="Index" class="btn btn-outline-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
